<h1>Tienda de productos</h1>
{{#each result.docs}}
  <hr />
  <h3>{{this.title}}</h3>
  <p>{{this.description}}</p>
  <p>Precio: {{this.price}}</p>
  <p>{{this.thumbnails}}</p>
  <p>Codigo: {{this.code}}</p>
  <p>Stock: {{this.stock}}</p>
  <p>Categoria: {{this.category}}</p>
  <p>Id: {{this._id}}</p>
  <p>Estado: {{this.status}}</p>
  <p>Marca: {{this.brand}}</p>
  <button class="btn btn-outline-secondary" type="submit">Agregar al carrito</button>
{{/each}}
{{#if result.hasPrevPage}}
  <a href={{result.prevLink}}>Anterior</a>
{{/if}}
{{#if result.hasNextPage}}
  <a href={{result.nextLink}}>Siguiente</a>
{{/if}}