<h1>Tienda de productos</h1>
<div class="cart" data-cid="{{user.cart}}">
  <h2>Bienvenido!</h2>
  <p>Nombre: {{user.name}}</p>
  <p>Email: {{user.email}}</p>
  <p>Edad: {{user.age}}</p>
  <p>Rol: {{user.role}}</p>
  {{#if admin}}
    <form id="addRemoveProducts">
      <button class="btn btn-outline-secondary" type="submit">Agregar o eliminar
        productos</button>
    </form>
    <form id="users">
      <button class="btn btn-outline-secondary" type="submit">Editar usuarios</button>
    </form>
  {{else}}
    <form id="myCart">
      <button class="btn btn-outline-secondary" type="submit">Mi carrito</button>
    </form>
  {{/if}}
  <form id="chatGeneral">
    <button class="btn btn-outline-secondary" type="submit">Chat general</button>
  </form>
  <form id="logout">
    <button class="btn btn-outline-secondary" type="submit">Logout</button>
  </form>
</div>
<div>
  {{#each result.docs}}
    <hr />
    <h3>{{this.title}}</h3>
    <p>{{this.description}}</p>
    <p>Precio: {{this.price}}</p>
    <p>{{this.thumbnails}}</p>
    <p>Codigo: {{this.code}}</p>
    <p>Stock: {{this.stock}}</p>
    <p>Categoria: {{this.category}}</p>
    <p>Id: {{this._id}}</p>
    <p>Estado: {{this.status}}</p>
    <p>Marca: {{this.brand}}</p>
    <form class="addToCart" id="{{this._id}}">
      <button class="btn btn-outline-secondary" type="submit">Agregar al carrito</button>
    </form>
  {{/each}}
  <br /><br />
  {{#if result.hasPrevPage}}
    <a href={{result.prevLink}}>Anterior</a>
  {{/if}}
  {{#if result.hasNextPage}}
    <a href={{result.nextLink}}>Siguiente</a>
  {{/if}}
</div>
<script src="/js/home.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>